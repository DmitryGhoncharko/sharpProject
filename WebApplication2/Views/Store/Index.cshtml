<h1>Продукты</h1>
<form action="/Store/Search" method="get">
    <input type="text" name="search" placeholder="Поиск продуктов"/>
    <button type="submit">Поиск</button>
</form>

<table class="table">
    <thead>
    <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Description</td>
            <td>
                <a href="/Store/ProductDetails/@product.Id">Посмотреть</a>
            </td>
        </tr>
    }
    </tbody>
</table>
