@model IEnumerable<CartItem>

<h1>Корзина покупок</h1>

<table class="table">
    <thead>
    <tr>
        <th>Товар</th>
        <th>Количество</th>
        <th>Цена</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@(item.Quantity * item.Product.Price)</td>
            <td>
                <a href="/Cart/RemoveFromCart/@item.Product.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Any())
{
    <h3>Итого: @Model.Sum(item => item.Quantity * item.Product.Price)</h3>
}
else
{
    <p>Ваша корзина пуста.</p>
}